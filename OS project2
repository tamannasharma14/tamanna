#include<stdio.h>
int main()
{	int process[3]={2132,2102,2453};
	int burst[3]={2,4,8};
	int cburst[3]={2,4,8};
	int at[3]={0,0,0};
	int c[3]={0,0,0};
	int tat[3],wt[3];
	printf(" Longest remaining time first: \n");
	int i,j;
	 static int k;
	for(i=2;i>=0;i--)
{	
    for(j=burst[i];j>0;j--)
	{
		if(burst[i]>burst[i-1] && burst[i]>burst[i-2])
		{
			
			burst[i]--;
			c[i]=k+1;
		}
		else if(burst[i]==burst[i-1])
		{
			if(process[i]<process[i-1])
			{
				burst[i-1]--;
				c[i-1]=k+3;
			}
			else
			{
			burst[i]--;
			c[i]=k+10;
			}
		}
		else if(burst[i]==burst[i-2])
		{	if(process[i]<process[i-2])
			{
				burst[i-2]--;
				c[i-2]=k+1;
			}
			else
			{burst[i]--;
			c[i]=k+1;
			}
		}
	k++;	
	}
	
}
for(i=0;i<3;i++)
{
tat[i]=c[i]-at[i];	//Turn Around Time = Completion Time - Arrival Time
wt[i]= tat[i]-cburst[i];//Waiting Time = Turn Around Time - Burst Time
}

printf("Process 1:\nArrivalTime\tBurstTime\tCompletiontime\tTurnAroundTime\tWaitingTime\n %d\t\t %d\t\t %d\t\t %d\t\t %d \n",at[0],cburst[0],c[0],tat[0],wt[0]);
printf("Process 2:\nArrivalTime\tBurstTime\tCompletiontime\tTurnAroundTime\tWaitingTime\n %d\t\t %d\t\t %d\t\t %d\t\t %d \n",at[1],cburst[1],c[1],tat[1],wt[1]);
printf("Process 3:\nArrivalTime\tBurstTime\tCompletiontime\tTurnAroundTime\tWaitingTime\n %d\t\t %d\t\t %d\t\t %d\t\t %d \n",at[2],cburst[2],c[2],tat[2],wt[2]);
}
