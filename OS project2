#include<stdio.h>
int main()
{
    int pid[3],bt[3],rt[3],endTime,i,largest;
    int remain=0,n,time,sum_wait=0,sum_turnaround=0;
    printf("Enter no of Processes : ");
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        printf("Enter process Id for Process P%d : ",i+1);
        scanf("%d",&pid[i]);
        printf("Enter burst time for Process P%d : ",i+1);
        scanf("%d",&bt[i]);
        rt[i]=bt[i];
    }
rt[2]=0000;
for(i=0;i<n;i++)
{int pos=i;
for(j=i+1;j<n;j++)
{
  if(bt[j]<bt[pos])
   {
    rt[i]--;
    pos=j;
   }
  else
   {
   rt[pos]--;
    }
if(rt[i]==rt[j])
{
  if(pid[j]<pid[pos])
   {
    pos=j;
   }
}


